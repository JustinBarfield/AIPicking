<UserControl x:Class="AIPicking.Views.HomePageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIPicking.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Text="{Binding TextBoxValue, UpdateSourceTrigger=PropertyChanged}" Width="200" Height="30" Margin="0,0,0,10"/>
            <Button Content="Synthesize Speech" Width="150" Height="30" Command="{Binding SynthesizeSpeechCommand}" Margin="0,0,0,10"/>
            <Button Content="Recognize Speech from Mic" Width="200" Height="30" Command="{Binding RecognizeSpeechFromMicCommand}" Margin="0,0,0,10"/>
            <TextBox Text="{Binding RecognizedText}" Width="200" Height="30" Margin="0,0,0,10"/>
            <Ellipse Width="20" Height="20" Fill="Red" Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,0,10"/>
            <Button Content="Scan Cart ID" Width="150" Height="30" Command="{Binding OpenScanCartIDViewCommand}" Margin="0,0,0,10"/>
            <Button Content = "Translate" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" Command="{Binding TranslateCommand}"/>
    </StackPanel>
    </Grid>
</UserControl>
