<Window x:Class="AIPicking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIPicking"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Grid>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TextBoxValue}" />
        <Button Content="Synthesize Speech" Width="150" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Command="{Binding SynthesizeSpeechCommand}"/>

    </Grid>
</Window>
